<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nama"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.030"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="291dp">

        <Button
            android:id="@+id/main_button_change_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/halaman1"
            android:onClick="ToSecondActivity"
            android:textColor="@color/black"
            android:backgroundTint="@color/grey"
            />

        <Button
            android:id="@+id/main_button_change_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/halaman2"
            android:onClick="ToThirdActivity"
            android:textColor="@color/black"
            android:backgroundTint="@color/grey"
            android:layout_marginTop="15dp"
            />

        <Button
            android:id="@+id/Programmatic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ToProgrammatic"
            android:text="@string/programmatic"
            android:textColor="@color/black"
            android:backgroundTint="@color/grey"
            android:layout_marginTop="15dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>